<h1> HELLO THERE, ITS A QUESTION</h1>

<%= link_to "New question", new_question_path, class: 'btn btn-primary btn-lg' %>

<% @question.each do |question| %>
  <article class="card mt-3">
    <div class="card-body">
      <h4><%= question.title %></h4>

        <section class="card-text">
          <time datetime="<%= question.formatted_created_at %>">
            <small><%= question.formatted_created_at %></small>
          </time>

          <p class="my-2">
            <%= question.body %>
          </p>
        </section>

    <%= link_to 'Show', question_path(question.id), class: 'btn btn-primary'  %>
    <%= link_to 'Edit', edit_question_path(question.id), class: 'btn btn-secondary'  %>
    <%= link_to 'Destroy', question_path(question.id), class: 'btn btn-danger',
                data: {method: :delete, confirm: 'Are you sure?'} %>
    </div>
  </article>
<% end %>